{
    "manifest_version": 2,
    "name": "Save Tabs",
    "version": "0.1",
    "description": "Save currently opened tabs",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts":[
        {
            "matches": ["<all_urls>"],
            "css": ["popup.css"],
            "js": ["popup.js"]
        }
    ],
    "permissions": [
        "storage",
        "tabs"
    ]
}